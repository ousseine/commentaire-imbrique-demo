{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}

    <div id="admin" class="content admin-comment">
        <div class="top-title">
            <h1 class="title">#{{ comment.id }} : Commentaire de {{ comment.name }}</h1>

            <div class="top">
                <a class="btn btn-sm btn-dark me-1" href="{{ path('app_admin_comment_index') }}">Retour</a>
                {{ include('admin/comment/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="contain">
            <div class="comment-show mb-2">
                <span>Nom : {{ comment.name }}</span><br>
                <span>Email : {{ comment.email }}</span><br>
                <span>Article #{{ comment.post.id }} : {{ comment.post.title }}</span>
            </div>

            <span class="date">
                <i class="fa-solid fa-calendar-days"></i>
                Date de publication : {{ comment.publishedAt | format_datetime('full', 'none', locale="fr") }}
            </span>

            <article class="mt-2">{{ comment.message | raw }}</article>
        </div>
    </div>

{% endblock %}
