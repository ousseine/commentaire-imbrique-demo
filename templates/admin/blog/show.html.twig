{% extends 'base.html.twig' %}

{% block title %}Admin : {{ post.title }}{% endblock %}

{% block body %}

    <div id="admin" class="content admin-blog">
        <div class="top-title">
            <h1 class="title">{{ post.title }}</h1>

            <div class="top">
                <a class="btn btn-sm btn-dark" href="{{ path('app_admin_blog_index') }}">retour</a>
                <a class="btn btn-sm btn-secondary mx-1" href="{{ path('app_admin_blog_edit', {'id': post.id}) }}">edit</a>
                {{ include('admin/blog/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="post-img">
            <img src="https://picsum.photos/seed/picsum/200/300" alt="{{ post.title }}">
        </div>

        <div class="contain">
            <div class="date">
                <i class="fa-solid fa-calendar-days"></i>
                Date de publication : {{ post.publishedAt|format_datetime('full','none', locale='fr') }}
            </div>
            <div class="summary">{{ post.summary }}</div>
            <article>{{ post.content|raw }}</article>
        </div>
    </div>

{% endblock %}
